@page
@model Plantify_Project_The_Webshop.Pages.OrderConfirmationModel
@inject Plantify_Project_The_Webshop.Data.AccessControl accessControl
@{
    ViewData["Title"] = "Order Confirmation";
}

<div id="order-confirmation">
    <h1 class="confirmation-title">Order Confirmation</h1>

    <div class="confirmation-message">
        <p id="t-message">Thank you, @accessControl.LoggedInAccountName for your order!</p>

        <p class="order-date">Order Date: @DateTime.Now.ToString()</p>
        <p>Your Total: @Model.TotalPrice SEK</p> 
    </div> 

    <form class="return-form" asp-page="/Index" method="get">
        <button type="submit" class="return-button">Return to Start</button>
    </form>
</div>
